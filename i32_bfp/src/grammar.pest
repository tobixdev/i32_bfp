action = { function_def }

function_def = { ID ~ "(" ~ ID? ~ ")" ~ ":=" ~ expr }

expr = { addsub }

addsub = { muldiv ~ (addsub_op ~ addsub)?  }
addsub_op = { "+" | "-" }
muldiv = { atom ~ (muldiv_op ~ muldiv)? }
muldiv_op = { "*" | "/" }
atom = {
    "(" ~ expr ~ ")" |
    NUMBER |
    ID
}

ID = { ASCII_ALPHA+ }
NUMBER = { ASCII_DIGIT+ }